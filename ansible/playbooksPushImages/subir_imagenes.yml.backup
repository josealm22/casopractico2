- name: Importar imÃ¡genes a Azure Container Registry
  hosts: localhost
  gather_facts: no
  tasks:
    - name: Importar imagen de Nginx desde Docker Hub a ACR
      command: >
        az acr import
        --name acrcp2dv
        --source docker.io/library/nginx:latest
        --image nginx:latest

    - name: Importar imagen de OwnCloud desde Docker Hub a ACR
      command: >
        az acr import
        --name acrcp2dv
        --source docker.io/library/owncloud:latest
        --image owncloud:latest
